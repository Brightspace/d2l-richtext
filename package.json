{
  "name": "d2l-richtext",
  "description": "Polymer-based web components for rendering D2L annotated richtext.",
  "private": true,
  "scripts": {
    "postinstall": "polymer install --variants",
    "test": "npm run lint",
    "lint": "npm run lint:js && npm run lint:wc",
    "lint:js": "eslint *.html demo/*.html test/*.html",
    "lint:wc": "polymer lint -i *.html"
  },
  "homepage": "https://github.com/Brightspace/d2l-richtext",
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/d2l-richtext.git"
  },
  "bugs": {
    "url": "https://github.com/Brightspace/d2l-richtext/issues"
  },
  "keywords": [
    "d2l",
    "richtext"
  ],
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "devDependencies": {
    "eslint": "^4.17.0",
    "eslint-config-brightspace": "^0.4.0",
    "eslint-plugin-html": "^4.0.2",
    "polymer-cli": "^1.6.0"
  }
}
